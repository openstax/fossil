   <mtext>N&#160;+&#160;3H</mtext><mo stretchy="false">&#8594;</mo><msub>
    <mrow>
     <mtext>NH</mtext>
    </mrow>
    <mtext>3</mtext>
   </msub>
   
  </mrow>
</mrow><annotation-xml encoding="MathML-Content"><semantics>
  <mrow>
   <mtext>N&#160;+&#160;3H</mtext><mo stretchy="false">&#8594;</mo><msub>
    <mrow>
     <mtext>NH</mtext>
    </mrow>
    <mtext>3</mtext>
   </msub>
   
  </mrow>
